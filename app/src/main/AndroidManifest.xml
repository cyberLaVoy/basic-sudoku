<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cyberlavoy.sudoku">

    <application
        android:allowBackup="true"
        android:icon="@drawable/rose_vector"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PuzzleListActivity"  android:parentActivityName=".MenuActivity">
        </activity>
        <activity android:name=".PuzzleActivity" android:parentActivityName=".PuzzleListActivity">
        </activity>
        <activity android:name=".SolvedActivity">
        </activity>
    </application>

</manifest>